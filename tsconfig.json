{
    "compilerOptions": {
        "preserveConstEnums": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "target": "es5",
        "outDir": ".build",
        "moduleResolution": "node",
        "lib": [
            "es2021"
        ],
        "rootDir": "./",
        "noImplicitAny": true,
        "esModuleInterop": true,
        "allowJs": true
    },
    "include": [
        "**/*"
    ]
}